{
  "name": "smartschool-grid",
  "module": "index.ts",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chrome": "^0.1.27"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "build": "bun build src/content.ts --outfile dist/content.js --target browser",
    "watch": "bun build src/content.ts --outfile dist/content.js --target browser --watch",
    "build:prod": "bun run build && bun run zip",
    "zip": "bun run scripts/zip-extension.ts"
  },
  "type": "module"
}
