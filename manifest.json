{
  "manifest_version": 3,
  "name": "Smartschool Grid",
  "version": "1.1",
  "description": "Berekent automatisch je percentages per vak en totaalpercentage in de Smartschool puntenlijst",
  "host_permissions": ["*://*.smartschool.be/*"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.smartschool.be/*"],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ]
}